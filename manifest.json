{
    "manifest_version": 2,
    "name": "Website Blocker",
    "version": "1.0",
    "description": "Block access to certain websites",
    "permissions": [
      "storage",
      "webRequest",
      "webRequestBlocking",
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
  }
  